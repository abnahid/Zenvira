# Database (Required)
# PostgreSQL connection string - get from your database provider (Neon, Supabase, Railway, etc.)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Better Auth (Required)
# Secret key for signing tokens - generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-here"
# Your API URL (use your Vercel deployment URL in production)
BETTER_AUTH_URL="http://localhost:5000"

# CORS (Required)
# Your frontend URL (use your Vercel frontend URL in production)
TRUSTED_ORIGIN="http://localhost:3000"

# Email - Resend (Optional)
# Get from https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxx"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Server (Optional - defaults shown)
PORT=5000
NODE_ENV=development
